<%= form_with(model: account) do |form| %>
  <% if account.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
        <% account.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset <%= disabled && "disabled" %>>
    <div class="row mb-3">
      <div class="col-3">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="col-3">
        <%= form.label :kind, class: "form-label" %>
        <%= form.select :kind, Account.kinds.keys.map { |k| [k.humanize, k] }, {}, { class: "form-select" } %>
      </div>

      <div class="col-3">
        <%= form.label :balance, class: "form-label" %>
        <%= form.number_field :balance, step: 0.01, class: "form-control" %>
      </div>
    </div>

    <% if !disabled %>
      <div class="d-flex justify-content-end">
        <%= form.submit nil, class: "btn btn-success" %>
      </div>
    <% end %>
  </fieldset>
<% end %>
