<div class="d-flex justify-content-between py-3">
  <h2><%= @category.model_name.human.pluralize %></h2>

  <div class="d-flex align-self-center gap-1">
    <%= link_to edit_category_path(@category), title: "Edit", class: 'btn btn-primary' do %>
      <i class="bi bi-pencil"></i>
    <% end %>

    <%= link_to url_for(action: :destroy, id: @category.id), 
                data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, 
                title: "Delete", 
                class: "btn btn-danger" do %>
      <i class="bi bi-trash"></i>
    <% end %>

    <div class="dropdown">
      <button class="btn btn-secondary" data-bs-toggle="dropdown">
        <i class="bi bi-three-dots-vertical"></i>
      </button>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="#">Action</a></li>
        <li><a class="dropdown-item" href="#">Another action</a></li>
        <li><a class="dropdown-item" href="#">Something else here</a></li>
      </ul>
    </div>
  </div>
</div>

<%= render "form", category: @category, disabled: true %>
