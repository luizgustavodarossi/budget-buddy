<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="border border-opacity-50 rounded p-5 text-center">
          <h3 class="mb-5">Change your password</h3>
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="row">
              <div class="col mb-4">
                <%= f.password_field :password, 
                    autocomplete: "new-password", 
                    class: "form-control form-control-lg", 
                    placeholder: "Password (#{@minimum_password_length} characters minimum)" %>
              </div>
            </div>

            <div class="row">
              <div class="col mb-4">
                <%= f.password_field :password_confirmation, 
                    autocomplete: "new-password", 
                    class: "form-control form-control-lg", 
                    placeholder: "Password confirmation" %>
              </div>
            </div>

            <div class="d-grid">
              <%= f.submit "Change my password", class: "btn btn-primary btn-lg btn-block" %>
            </div>
          <% end %>

          <hr class="my-4">

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
